<script>
  const initializeLineDrawing = () => {
    const svg = document.getElementById('svgPath') as SVGPathElement | null;
    if (!svg) return;

    const length = svg.getTotalLength();
    const speedFactor = 1; // Pas deze waarde aan om de snelheid te wijzigen

    // start positioning of svg drawing
    svg.style.strokeDasharray = `${length}`;
    svg.style.strokeDashoffset = `${length}`;

    window.addEventListener('scroll', () => {
      const scrollPercent =
        (document.body.scrollTop + document.documentElement.scrollTop) /
        (document.documentElement.scrollHeight -
          document.documentElement.clientHeight);

      const draw = length * scrollPercent * speedFactor;

      // Reverse the drawing when scroll upwards
      svg.style.strokeDashoffset = `${length - draw}`;
    });
  };

  if (typeof window !== 'undefined') {
    window.addEventListener('load', initializeLineDrawing);
  }
</script>
