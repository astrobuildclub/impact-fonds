---
const { btnlabel, href, ...rest } = Astro.props;
const { class: className, ...remainingProps } = rest;

import { Icon } from 'astro-icon/components';
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={btnlabel}
  class:list={[
    'flex items-center justify-between gap-2 rounded-full p-4 px-8 text-white',
    className,
  ]}
  {...remainingProps}
>
  <span class="text-xs md:text-sm">{btnlabel}</span>
  <Icon name="tabler:arrow-right" class="block text-3xl" />
</a>

<style>
  a {
    background-color: #80657f; /* Vervang dit met de juiste kleurcode */
    font-family: var(--font-heading);

    font-weight: bold;

    align-items: center;
    border-radius: 100vw;
    text-decoration: none;
    transition: background 0.2s cubic-bezier(0.39, 0.575, 0.565, 1);
  }

  a:hover {
    background-color: #644863;
  }
</style>
