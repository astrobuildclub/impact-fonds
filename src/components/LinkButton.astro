---
const { btnlabel, btnlink } = Astro.props;
const { class: className, ...rest } = Astro.props;

import { Icon } from 'astro-icon/components';
---

<a
  href={btnlink}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Share on LinkedIn "
  class:list={[
    'flex items-center justify-between gap-2 rounded-full p-4 px-8 text-white',
    className,
  ]}
  {...rest}
>
  <span class="text-xs md:text-sm">{btnlabel}</span>
  <Icon name="tabler:arrow-right" class="block text-3xl" />
</a>

<style>
  a {
    background-color: #80657f; /* Vervang dit met de juiste kleurcode */
    font-family: var(--font-heading);

    font-weight: bold;

    align-items: center;
    border-radius: 100vw;
    text-decoration: none;
  }
</style>
