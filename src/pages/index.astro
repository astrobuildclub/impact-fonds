---
// Layout
import DefaultLayout from '../layout/default.astro';
import Image from 'astro/components/Image.astro';

// Libs
// import { formatBlogPosts } from '../js/utils';

// Components
import Hero from '../components/Hero.astro';
import Drawing from '../components/Drawing.astro';
import Partners from '../components/Partners.astro';
//import MDXLoader from '../components/MDXLoader.astro';

// MDX Data Imports
import Intro from '../data/intro.mdx';
import Rendement from '../data/rendement.mdx';
import DealflowText from '../data/dealflow-text.mdx';
import DealflowTable from '../data/dealflow-table.mdx';
import Exit from '../data/exit.mdx';
import Samenwerking from '../data/samenwerking.mdx';
import Team from '../data/team.mdx';
import Invest from '../data/invest.mdx';
import Contact from '../data/contact.mdx';
import Markdown from '../data/md-example.mdx';

// Data
// const allPosts = await Astro.glob('../data/*.mdx');
// const filteredPosts = formatBlogPosts(allPosts);

// General Settings
const title = 'Impact Fonds';
const subtitle = 'Duurzame Voedselketen Rotterdam';

// console.log(filteredPosts);
---

<DefaultLayout {title} {subtitle}>
  <div class="content relative overflow-hidden">
    <Drawing />
    <Hero {title} {subtitle} />
    <section class="intro">
      <Intro />
    </section>

    <section class="popout">
      <!-- Infrographic -->
      <Image
        src="/assets/img/img-infographic.png"
        alt="Mooi Rotterdams Platteland."
        width="1600"
        height="900"
        class="rounded-xl"
      />
    </section>

    <section>
      <Rendement />
    </section>

    <section class="full-width bg-salmon py-20">
      <!-- Dealflow -->
      <div class="popout">
        <div class="cols grid gap-8 md:grid-cols-12">
          <div class="md:col-span-7">
            <DealflowText />
          </div>
          <div class="md:col-span-5">
            <DealflowTable />
          </div>
        </div>
      </div>
    </section>

    <section>
      <Exit />
    </section>

    <section>
      <Samenwerking />
    </section>

    <section class="full-left rounded-right overflow-hidden">
      <!-- Boer -->
      <Image
        src="/assets/img/img-farmer.png"
        alt="Mooi Rotterdams Platteland."
        width="1600"
        height="900"
        class="object-cover"
      />
    </section>

    <section>
      <!-- Nauwe samenwerking fondsmanager, investment team en programma Rotterdam de boer op! -->
      <Team />
    </section>

    <!-- <section>
      <Markdown />
    </section> -->

    <section
      class="invest full-left rounded-right bg-default grid grid-cols-subgrid py-16 pb-20"
    >
      <!-- Invest -->
      <div>
        <Invest />
      </div>
    </section>

    <section
      class="contact full-right rounded-left bg-purple -mt-20 grid grid-cols-subgrid py-16 text-white"
    >
      <div>
        <Contact />
      </div>
    </section>

    <section class="partners full-width py-10">
      <!-- Invest -->
      <div class="full-width grid">
        <div class=""><h3>Partners</h3></div>

        <Partners />
      </div>
    </section>
  </div>
</DefaultLayout>

<style is:global>
  body {
    font-size: 1rem;
    text-rendering: optimizeLegibility;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-body);
    overflow-wrap: break-word;
  }

  section > * + *,
  section div > * + * {
    margin-block-start: 1rem;
  }

  h3:first-child {
    margin-block-start: 0rem;
  }

  h3,
  .h3 {
    font-size: var(--fs-xl);
    line-height: 112.5%;
    /* color: red; */
    margin-block-start: 2rem;
    font-family: var(--font-heading);
    font-weight: 700;
  }
  p {
    font-size: var(--fs-base);
    line-height: 166%;
    letter-spacing: 0.0125em;
  }

  a {
    text-decoration-line: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 2px;
  }

  section ol {
    list-style: none;
    margin-block: 0.5rem;
    padding-left: 0;
    counter-reset: list-counter;
  }

  section > ol li {
    counter-increment: list-counter;
    position: relative;
    font-size: var(--fs-base);
    margin-block: 1rem;
    padding-left: 2.5rem; /* Adjust this based on the size of the circle */
  }

  section > ol li::before {
    content: counter(list-counter);
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    background-color: var(--clr-teal); /* Tailwind color example (blue-600) */
    color: white;
    border-radius: 50%;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }
  .team {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-block: 1rem;
  }

  .team > * {
    background: rgba(var(--clr-teal-rgb), 0.4);
    margin: 0;
    padding: 1.5rem;
    font-size: var(--fs-sm);
    line-height: 150%;
    border-radius: 0.875rem;
  }

  section table {
    /* margin-top: 2rem; */
  }
  section table td {
    border: 2px solid rgba(255, 255, 255, 0.8);
    padding: 0.5rem;
  }

  .rounded-right {
    border-radius: var(--radius-right);
  }

  .rounded-bl {
    border-radius: 0 0 0 var(--radius-default);
  }

  .rounded-left {
    border-radius: var(--radius-left);
  }

  /* Selecteer de eerste kolom van de tabelcellen en maak de tekst vetgedrukt */
  table td:first-child,
  table th:first-child {
    font-weight: bold;
  }
</style>

<script>
  import { animate, inView, stagger } from '@motionone/dom';

  inView('section', ({ target }) => {
    animate(target, { opacity: [0, 1] }, { duration: 1, delay: 0.25 });
  });

  inView('ul li', (info) => {
    animate(
      info.target,
      { opacity: [0, 1] },
      {
        delay: stagger(0.25),
      },
    );
  });
</script>
