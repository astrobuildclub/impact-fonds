---
// Layout
import DefaultLayout from '../layout/default.astro';
import Image from 'astro/components/Image.astro';

// Libs
// import { formatBlogPosts } from '../js/utils';

// Components
import Hero from '../components/Hero.astro';
import Drawing from '../components/Drawing.astro';
//import MDXLoader from '../components/MDXLoader.astro';

// MDX Data Imports
import Intro from '../data/intro.mdx';
import Rendement from '../data/rendement.mdx';
import DealflowText from '../data/dealflow-text.mdx';
import DealflowTable from '../data/dealflow-table.mdx';
import Exit from '../data/exit.mdx';
import Samenwerking from '../data/samenwerking.mdx';
import Team from '../data/team.mdx';
import Invest from '../data/invest.mdx';
import Contact from '../data/contact.mdx';

// Data
// const allPosts = await Astro.glob('../data/*.mdx');
// const filteredPosts = formatBlogPosts(allPosts);

// Animation
import { animate } from 'motion';
import { inView } from 'motion';

// General Settings
const title = 'Impact Fonds';
const subtitle = 'Duurzame Voedselketen Rotterdam';

// console.log(filteredPosts);
---

<DefaultLayout {title} {subtitle}>
  <div class="content relative overflow-hidden">
    <Drawing />
    <Hero {title} {subtitle} />
    <section class="intro">
      <Intro />
    </section>

    <section class="popout">
      <!-- Infrographic -->
      <Image
        src="/assets/img/img-infographic.png"
        alt="Mooi Rotterdams Platteland."
        width="1600"
        height="900"
        class="rounded-xl"
      />
    </section>

    <section>
      <Rendement />
    </section>

    <section class="full-width py-12">
      <!-- Dealflow -->
      <div class="popout">
        <div class="cols grid gap-8 md:grid-cols-12">
          <div class="md:col-span-8">
            <DealflowText />
          </div>
          <div class="md:col-span-4">
            <DealflowTable />
          </div>
        </div>
      </div>
    </section>

    <section>
      <Exit />
    </section>

    <section>
      <Samenwerking />
    </section>

    <section class="full-left">
      <!-- Boer -->
      <Image
        src="/assets/img/img-farmer.png"
        alt="Mooi Rotterdams Platteland."
        width="1600"
        height="900"
        class="object-cover"
      />
    </section>

    <section>
      <!-- Nauwe samenwerking fondsmanager, investment team en programma Rotterdam de boer op! -->
      <Team />
    </section>

    <section class="invest full-left grid grid-cols-subgrid py-12">
      <!-- Invest -->
      <div>
        <Invest />
      </div>
    </section>

    <section
      class="contact full-right -mt-16 grid grid-cols-subgrid bg-slate-300 py-12"
    >
      <!-- Invest -->
      <div>
        <Contact />
      </div>
    </section>

    <section class="partners">
      <!-- Invest -->
      <div>
        <h3>Partners</h3>
      </div>
    </section>
  </div>
</DefaultLayout>

<style is:global>
  body {
    font-size: 1rem;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-body);
    overflow-wrap: break-word;
    text-rendering: optimizeLegibility;
  }

  h3 {
    font-size: var(--fs-2xl);
    line-height: 1;
    color: red;
    margin-block: 1.25rem;
    font-family: var(--font-heading);
  }
  p {
    font-size: var(--fs-base);
    line-height: 166%;
    letter-spacing: 0.0125em;
    margin-block: 1rem;
  }

  section ul {
    list-style: none;
    margin-block: 0.5rem;
    padding-left: 0;
    counter-reset: list-counter;
  }

  section > ul li {
    counter-increment: list-counter;
    position: relative;
    font-size: var(--fs-base);
    margin-block: 1rem;
    padding-left: 2.5rem; /* Adjust this based on the size of the circle */
  }

  section > ul li::before {
    content: counter(list-counter);
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    background-color: var(--clr-teal); /* Tailwind color example (blue-600) */
    color: white;
    border-radius: 50%;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }
  .team {
    background: green;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .team > * {
    background: red;
    margin: 0;
    padding: 1rem;
    font-size: var(--fs-sm);
  }
</style>

<script>
  import { animate, inView, stagger } from '@motionone/dom';

  inView('section', ({ target }) => {
    animate(target, { opacity: [0, 1] }, { duration: 1.5, delay: 0.25 });
  });

  inView('ul li', (info) => {
    animate(
      info.target,
      { opacity: [0, 1] },
      {
        delay: stagger(0.25),
      },
    );
  });
</script>
